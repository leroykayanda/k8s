apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: references
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: references
  minReplicas: 1
  maxReplicas: 2
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 80
    - type: Resource
      resource:
        name: memory
        target:
          type: AverageValue
          averageValue: 205Mi
